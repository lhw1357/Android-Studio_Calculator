            android:background="#cccccc"
            android:text="-"
            android:textSize="25dp"
            android:textColor="#fdfdfdfd"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#cccccc"
            android:text="+"
            android:textSize="25dp"
            android:textColor="#fdfdfdfd"
            />





    </LinearLayout>

</LinearLayout>








</LinearLayout>
