<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.user_lhw.calculator.MainActivity">

    <TextView
        android:gravity="center"
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#fdfdfdfd"
        android:hint="input calculation"
        android:textSize="50dp"
        android:textAlignment="textEnd"


        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"


        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4"

            >

            <Button
                android:id="@+id/btn_7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#999999"
                android:text="7"
                android:textColor="#fdfdfdfd"
                android:textSize="40dp" />

            <Button

                android:id="@+id/btn_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#999999"
                android:text="4"
                android:textColor="#fdfdfdfd"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#999999"
                android:text="1"
                android:textColor="#fdfdfdfd"
                android:textSize="40dp" />

            <Button
                android:id="@+id/dot"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#999999"
                android:text="."
                android:textColor="#fdfdfdfd"
                android:textSize="40dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4"

            >

            <Button
                android:id="@+id/btn_8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#999999"
                android:text="8"
                android:textColor="#fdfdfdfd"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#999999"
                android:text="5"
                android:textColor="#fdfdfdfd"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#999999"
                android:text="2"
                android:textColor="#fdfdfdfd"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn_0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#999999"
                android:text="0"
                android:textColor="#fdfdfdfd"
                android:textSize="40dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4"

            >

            <Button
                android:id="@+id/btn_9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#999999"
                android:text="9"
                android:textColor="#fdfdfdfd"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn_6"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#999999"
                android:text="6"
                android:textColor="#fdfdfdfd"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#999999"
                android:text="3"
                android:textColor="#fdfdfdfd"
                android:textSize="40dp" />

            <Button
                android:id="@+id/equal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:background="#999999"
                android:text="="
                android:textColor="#fdfdfdfd"
                android:textSize="40dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5"

            >

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#cccccc"
                android:text="CLR"
                android:textColor="#fdfdfdfd"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_slash"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#cccccc"
                android:text="/"
                android:textColor="#fdfdfdfd"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_x"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#cccccc"
                android:text="Ã—"
                android:textColor="#fdfdfdfd"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#cccccc"
                android:text="-"
                android:textColor="#fdfdfdfd"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#cccccc"
                android:text="+"
                android:textColor="#fdfdfdfd"
                android:textSize="25dp" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
